#:kivy 1.11.1
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import Factory kivy.factory.Factory

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    Login_Screen:
    GameScreen:

<MainScreen>:
    name: "main"

    Button:
        text: "Game on"
        on_release: app.root.current = "login"
        font_size: 50

<Login_Screen>:
    host: host
    port: port
    name: "login"

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Host No: "

            TextInput:
                id: host
                multiline: False

        GridLayout:
            cols:2

            Label:
                text: "Port No: "

            TextInput:
                id: port
                multiline: False

        Button:
            text: "Submit"
            on_release: root.btn()



<Login_Success>:
    Label:
        text: "Congratulations! You have successfully logined!"
        size_hint: 0.8,0.5
        pos_hint: {"x":0.1,"top":1}

    Button:
        text: "Enter the game"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1,"y":0.1}  
        on_release: app.root.current = "game_1"      

<Login_Failure>:
    Label:
        text: "Sorry! Either your host or you port is invalid!\n          Click anywhere else to exit."
        size_hint: 0.8,0.5
        pos_hint: {"x":0.1,"top":1}

    Button:
        text: "Enter the game"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1,"y":0.1}  
        on_release: app.root.current = "game_1"

